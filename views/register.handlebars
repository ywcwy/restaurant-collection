<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <form action="/users/register" method="POST">
        <h2 class="text-center mb-3">Register</h2>
        <div class="form-group">
          <label for="name">Name</label>
          <input type="text" id="name" name="name" placeholder="your name" class="form-control" value={{name}}>
        </div>
        <div class="form-group">
          <label for="email">Email</label>
          <input type="email" id="email" name="email" placeholder="your email" class="form-control" value={{email}}>
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input type="password" id="password" name="password" placeholder="your password" class="form-control"
            value={{password}}>
        </div>
        <div class="form-group">
          <label for="confirmPassword">Confirm Password</label>
          <input type="password" id="confirmPassword" name="confirmPassword" placeholder="confirm your password"
            class="form-control" value={{confirmPassword}}>
        </div>
        <button class="btn btn-info btn-block" type="submit">Register</button>
        <p class="lead mt-3">Already Had An Account? <a href="/users/login">Login</a></p>
      </form>
    </div>
  </div>
</div>