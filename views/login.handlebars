<div class="login-page row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h2 class="text-center mb-3">Login</h2>
      {{>message}}
      <form action="/users/login" method="POST">
        <div class="form-group">
          <label for="email">Email</label>
          <input type="email" id="email" name="email" placeholder="your email" class="form-control">
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input type="password" id="password" name="password" placeholder="your password" class="form-control">
        </div>
        <button class="btn btn-warning btn-block" type="submit">Login</button>
        <a href="/auth/facebook" class='btn btn-info btn-block'>Facebook Login</a>
        <p class="lead mt-3">No Account? <a href="/users/register">Register</a></p>
      </form>
    </div>
  </div>
</div>